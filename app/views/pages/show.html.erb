<% (@stylesheets_header ||= []).push File.join(DC.cdn_root(:agnostic => true), "/embed/page/page_embed.css") %>

<div id="return_to_v1">
  <%= link_to '⬅︎ Read full document', @current_page.contextual_path, id: 'return_to_v1_text' %>
  <a id="return_to_v1_logo" href="/home"><img src="/images/common/document_cloud_logo_white@2x.png" width="150" height="32"></a>
</div>

<div class="container embed-preview-container">
  <div id="DC-embed-container" data-version="1.1" style="color:#999">
    <div style="font-size:10pt;line-height:14pt;">
      Page <%= @current_page.page_number %> of <a class="DC-embed-resource" href="<%= @current_page.contextual_path %>" title="View <%= @current_page.title_lower %> on DocumentCloud in new window or tab" target="_blank"><%= @current_document.title %></a>
    </div>
    <div style="position:relative;padding-bottom:<%= @current_page.inverted_aspect_ratio * 100 %>%;height:0;overflow:hidden;max-width:100%;margin:0.5em 0;border:1px solid #ccc;-webkit-box-sizing:border-box;clear:both">
      <img src="<%= @current_document.page_image_url(@current_page.page_number, 'normal') %>" srcset="<%= @current_document.page_image_url(@current_page.page_number, 'normal') %> 700w, <%= @current_document.page_image_url(@current_page.page_number, 'large') %> 1000w" alt="<%= @current_page.title %>" style="position:absolute;top:0;left:0;width:100%;height:100%">
    </div>
    <div style="font-size:8pt;line-height:12pt;text-align:center">
      Contributed to
      <a href="/" title="Go to DocumentCloud in new window or tab" target="_blank" style="font-weight:500;font-family:Gotham,inherit;color:black;text-decoration:none">DocumentCloud</a> by
      <a href="/public/search/Account:<%= @current_document.account_slug %>" title="View all documents contributed to DocumentCloud by <%= @current_document.account_name %> in new window or tab" target="_blank"><%= @current_document.account_name %></a> of
      <a href="/public/search/Group:<%= @current_document.organization_slug %>" title="View all documents contributed to DocumentCloud by <%= @current_document.organization_name %> in new window or tab" target="_blank"><%= @current_document.organization_name %></a> &bull;
      <a href="<%= @current_page.contextual_url %>" title="View <%= @current_page.title_lower %> on DocumentCloud in new window or tab" target="_blank">View entire document</a> or
      <a href="<%= @current_page.text_url %>" title="View text of <%= @current_page.title_lower %> on DocumentCloud in new window or tab" target="_blank">read the text</a>
    </div>
  </div>
</div>

<% (@javascripts_footer ||= []).push File.join(DC.cdn_root(:agnostic => true), "/embed/page/page_embed.js") %>
<%
  @javascript_footer_inline = <<-EOS
    DocumentCloud.embed.load('#{@current_page.canonical_url}', {
      container: '#DC-embed-container'
    });
  EOS
%>
